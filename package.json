{
    "name": "js-syntax-extension",
    "displayName": "JS Syntax Highlight Extension",
    "publisher": "learn-game-development",
    "icon": "LGDLogo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Andrew199617/js-syntax-extension"
    },
    "description": "Extra Syntax highlighting for JS files. Support React + Next.js.",
    "version": "2.1.2",
    "engines": {
        "vscode": "^1.1.0"
    },
    "keywords": [
        "js-syntax",
        ".js", "js", "javascript",
        "Learn Game Development", "LGD",
        "react", "next", "next.js",
        "typescript", "ts", ".ts"
    ],
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onCommand:lgd.generateTypings"
    ],
    "main": "./src/LGD",
    "contributes": {
        "commands": [
            {
                "command": "lgd.generateTypings",
                "title": "Compile js file to ts file.",
                "category": "LGD"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "LGD JS Syntax configuration",
            "properties": {
                "lgd.options": {
                    "type": "object",
                    "description": "Configuration options for LGD JS Syntax extension.",
                    "properties": {
                        "generateTypings": {
                            "type": "boolean",
                            "description": "Whether we should automatically compile js files into ts files.",
                            "default": false
                        },
                        "maintainHierarchy": {
                            "type": "boolean",
                            "description": "When compiling the js file should we keep the directory structure.",
                            "default": true
                        }
                    }
                }
            }
        },
        "grammars": [
            {
                "scopeName": "source.lgd.js",
                "injectTo": [
                    "source.js"
                ],
                "path": "./syntaxes/javascript.tmLanguage.json"
            },
            {
                "scopeName": "source.comment.line.injection.js",
                "injectTo": [
                    "source.js"
                ],
                "path": "./syntaxes/comment.tmLanguage.json"
            },
            {
                "scopeName": "source.objectliteral.injection",
                "injectTo": [
                    "source.js"
                ],
                "path": "./syntaxes/objectliteral.tmLanguage.json"
            },
            {
                "scopeName": "source.variable.injection",
                "injectTo": [
                    "source.js"
                ],
                "path": "./syntaxes/variabledefinition.tmLanguage.json"
            },
            {
                "scopeName": "source.function.call.injection",
                "injectTo": [
                    "source.js"
                ],
                "path": "./syntaxes/functioncall.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
    },
    "devDependencies": {
        "vscode": "^1.1.0"
    }
}
