{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LGDJavascript",
	"scopeName": "source.lgd.js",
	"injectionSelector": "L:source.js",
	"patterns": [
		{
			"include": "#createNew"
		},
		{
			"include": "#class"
		}
	],
	"repository": {
    "createNew": {
      "match": "(?!\\/\\/)(?<=\\.)create(?=\\()",
      "name": "keyword.create"
    },
    "class": {
      "match": "(?<=\\s|)\\w+(?=\\.create\\()",
      "name": "support.class.create"
    }
	}
}